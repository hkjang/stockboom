{
  "name": "stockboom",
  "version": "1.0.0",
  "private": true,
  "description": "Stock Trading Automation System",
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm run --recursive build",
    "start": "pnpm run --parallel start",
    "test": "pnpm run --recursive test",
    "test:cov": "pnpm run --recursive test:cov",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json,md}\"",
    "db:generate": "pnpm --filter @stockboom/database prisma generate",
    "db:push": "pnpm --filter @stockboom/database prisma db push",
    "db:migrate": "pnpm --filter @stockboom/database prisma migrate dev",
    "db:studio": "pnpm --filter @stockboom/database prisma studio",
    "docker:up": "docker compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f docker/docker-compose.yml down",
    "docker:dev": "docker compose -f docker/docker-compose.dev.yml up",
    "lint": "pnpm run --recursive lint",
    "clean": "pnpm run --recursive clean"
  },
  "keywords": [
    "stock",
    "trading",
    "automation",
    "ai",
    "korea-investment"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "date-fns": "^3.0.6"
  }
}
